erDiagram
    USER {
        user_id PK
        first_name
        last_name
        email UNIQUE
        password_hash
        is_admin "boolean"
    }

    COURSE {
        course_id PK
        course_name
        description
    }

    ENROLLMENT {
        enrollment_id PK
        course_id FK
        user_id FK
        enrollment_date
        role "Student, Instructor, TA"
    }

    MODULE {
        module_id PK
        course_id FK
        title
        content
    }

    ASSIGNMENT {
        assignment_id PK
        course_id FK
        title
        description
        due_date
    }

    SUBMISSION {
        submission_id PK
        assignment_id FK
        user_id FK
        submission_date
        content "text"
        file_path "string (optional)"
    }

    GRADE {
        grade_id PK
        submission_id FK
        grader_id FK
        grade_value
        feedback
        graded_date
    }

    ANNOUNCEMENT {
        announcement_id PK
        course_id FK
        author_id FK
        title
        content
        posted_date
    }

    USER ||--o{ ENROLLMENT : "participates in"
    COURSE ||--o{ ENROLLMENT : "has members"
    COURSE ||--o{ MODULE : "includes"
    COURSE ||--o{ ASSIGNMENT : "offers"
    COURSE ||--o{ ANNOUNCEMENT : "publishes"
    ASSIGNMENT ||--o{ SUBMISSION : "is submitted to"
    SUBMISSION ||--o{ GRADE : "receives"
    USER ||--o{ SUBMISSION : "creates"
    USER ||--o{ GRADE : "assigns"
    USER ||--o{ ANNOUNCEMENT : "writes"
